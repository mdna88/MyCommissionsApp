<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E0E0E0"
    tools:context="com.narvin.android.commissionsapp.AddActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Item Name"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/commission_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/commission_name_hint"
        android:layout_marginBottom="16dp"
        android:inputType="textCapWords"
        android:fontFamily="sans-serif-condensed"
        android:maxLength="12"
        android:layout_marginTop="8dp"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Commission type"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/fixed_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixed Rate Commission"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"
            />

        <RadioButton
            android:id="@+id/percentage_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage Based Commission"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="14sp"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Commission Value"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/commission_value_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/commission_value_hint"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/commission_add_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:elevation="10dp"
        android:src="@drawable/ic_done_white_24dp"
        android:textColor="@android:color/white"
        />

</LinearLayout>
